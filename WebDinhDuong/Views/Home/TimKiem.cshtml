@using WebDinhDuong.Models;
@model IEnumerable<MonAn>
<!-- menu -->
<div class="space-medium">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="section-title">
                    @using (Html.BeginForm("TimKiem", "Home"))
                    {
                        <button type="submit" name="singlebutton" class="btn btn-primary">Tìm kiếm</button>
                        <div style="width: 80%; float:right">

                            <input name="searchString" type="text" placeholder=" Nhập tên món muốn tìm kiếm" class="form-control" required>
                        </div>
                    }

                </div>
            </div>
        </div>
        <!-- starter -->
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="menu-block">
                <h3 class="menu-title">Món ăn</h3>
                @foreach (var groupItem in Model)
                {
                    <div class="menu-content">
                        <div class="row">
                            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
                                <div class="dish-img"><a href="#"><img src="./images/menu_dish_1.jpg" alt="" class="img-circle"></a></div>
                            </div>
                            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                                <div class="dish-content">
                                    <h5 class="dish-title"><a href="#">@groupItem.Name</a></h5>
                                    <span class="dish-meta">@groupItem.ThongTin</span>
                                    <div class="dish-price">
                                        <p>@groupItem.Protein Calo</p>
                                    </div>
                                </div>
                                <button type="submit" name="singlebutton" class="btn btn-primary"><a href="@Url.Action("ThemMoi","QuanLyKeHoach",new { id=groupItem.Id})">Thêm</a></button>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!-- /.starter -->
    </div>
</div>